package Class001;

public class DataTypes {
    public static void main(String[] args) {
      char ch='2';
      //if you want to store the single character value such as numbers,alpahabets specical characters
        char ch1='%';
    }
}
package Class001;

public class DataTypes {
    public static void main(String[] args) {
     //to store the true and false values
        //we are going to use the boolean
        boolean value=true;
        boolean value2=false;

    }
}


