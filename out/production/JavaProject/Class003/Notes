Conditional Statements


if

if(condition){
//write the code here that you want to execute if the condition is true
}


package Class003;

public class ConditionalStatements {
    public static void main(String[] args) {
        boolean condition =false;
        if(condition){ //if the given condition is true it will enters into the loop
            System.out.println("hello java how are you");
        }
    }
}


package Class003;

public class ConditionalStatements {
    public static void main(String[] args) {
       int age=19;
        if(age<=10){ //if the given condition is true it will enters into the loop
            System.out.println("eligble for voting");
        }
    }
}


public class ConditionalStatements {
    public static void main(String[] args) {
       int accountBalance=3000;
        if(accountBalance>1000){ //if the given condition is true it will enters into the loop
            System.out.println("yay's lets go to the shopping");
        }
    }
}


public class ConditionalStatements {
    public static void main(String[] args) {
      char gender='F';
        if(gender=='F'){ //if the given condition is true it will enters into the loop
            System.out.println("we always like shopping");
        }
    }
}


package Class003;

public class ConditionalStatements {
    public static void main(String[] args) {
      char gender='M';
        if(gender=='F'){ //if the given condition is true it will enters into the loop
            System.out.println("we always like shopping");
        }
        else{
            System.out.println("we don't like shopping");
        }
    }
}


=================================================================================

nested if conditions

public class ConditionalStatements {
    public static void main(String[] args) {
        System.out.println("1");
        if(true){
            System.out.println("2");
            if(true){
                System.out.println("3");
            }
        }
        System.out.println("4");
    }
}


public class ConditionalStatements {
    public static void main(String[] args) {
        int money=50000;
        String day="Monday";
        if(money>10000){
            if(day.equals("Sunday")){
                System.out.println("let go for shopping");
            }
            else{
                System.out.println("let wait for sunday");
            }
        }
        else{
            System.out.println("let save money more");
        }

    }
}


package Class003;

public class ConditionalStatements {
    public static void main(String[] args) {
        int age=17;
        if(age<18 & age>60){
            System.out.println("you will get dicount");
        }
    }
}


relational operators

int num1=10;
int num2=20;

num1>num2 ---------> false
num1<num2 -------->  true
num1==num2 ------> false
num1!=num2 -------> true
num1>=num2 ------>false
num1<=num2  -----> True


package Class003;

public class ConditionalStatements {
    public static void main(String[] args) {
        int num1=10;
        int num2=9;
        if(num1<=num2){  //10<=9
            System.out.println("you will get dicount");
        }
    }
}

=======================================================

Short hand operators

int num=10;
num+=10 ------>

public class ConditionalStatements {
    public static void main(String[] args) {
        int num=10;
        num+=10; //num=num+10 num=10+10
        System.out.println(num);

    }
}


public class ConditionalStatements {
    public static void main(String[] args) {
        double num=20;
        num-=5;
        System.out.println(num);

    }
}

public static void main(String[] args) {
        float num=11f;
        num/=2;
        System.out.println(num);

    }
}

 public static void main(String[] args) {
      int num=0;
       num++; //num=num+1 num=0+1
        System.out.println(num);

    }
}

package Class003;

public class ConditionalStatements {
    public static void main(String[] args) {
      int num=0;
       num--;
        System.out.println(num);

    }
}
